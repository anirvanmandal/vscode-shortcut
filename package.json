{
  "name": "vscode-shortcut-tasks",
  "displayName": "Shortcut",
  "icon": "resources/logo-shortcut.png",
  "description": "Manage Shortcut workflows from your VSCode",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "Anirvan",
  "repository": {
    "type": "git",
    "url": "https://github.com/anirvanmandal/vscode-shortcut"
  },
  "tags": [
    "productivity",
    "tasks",
    "shortcut"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Shortcut",
        "properties": {
          "shortcut.apiTokens": {
            "title": "API Tokens",
            "markdownDescription": "The list of workspace and their API tokens",
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          }
        }
      }
    ],
    "commands": [
      {
        "command": "pendingTasks.fetchShortcutTasks",
        "title": "Shortcut: Fetch Pending Tasks",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "pendingTasks.openStory",
        "title": "Shortcut: Open Story",
        "icon": "$(link-external)"
      },
      {
        "command": "pendingTasks.completeTask",
        "title": "Shortcut: Complete Task",
        "icon": "$(check)"
      },
      {
        "command": "refreshWorkspaces",
        "title": "Shortcut: Refresh Workspaces",
        "icon": "$(extensions-refresh)"
      },
      {
        "command": "copyBranchName",
        "title": "Shortcut: Copy Branch Name",
        "icon": "$(copy)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "shortcut",
          "title": "Shortcut",
          "icon": "resources/logo-shortcut.png"
        }
      ]
    },
    "views": {
      "shortcut": [
        {
          "id": "pendingTasks",
          "name": "Pending Tasks"
        },
        {
          "id": "assignedStories",
          "name": "Assigned Stories"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "pendingTasks.fetchShortcutTasks",
          "when": "view == pendingTasks",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "pendingTasks.openStory",
          "when": "(view == pendingTasks && viewItem == story) || (view == assignedStories && viewItem == story)",
          "group": "inline"
        },
        {
          "command": "pendingTasks.completeTask",
          "when": "view == pendingTasks && viewItem == task && !viewItem.isComplete",
          "group": "inline"
        },
        {
          "command": "copyBranchName",
          "when": "view == assignedStories && viewItem == story",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "publish": "npm run package && vsce publish",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "docs": "jsdoc -c jsdoc.json"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0",
    "eslint": "^9.16.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@shortcut/client": "^1.1.0",
    "better-docs": "^2.7.3",
    "markdown-to-text": "^0.1.1"
  }
}
